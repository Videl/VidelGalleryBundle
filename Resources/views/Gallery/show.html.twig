<h1>Gallery</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">    
    <li>
        <a href="{{ path('videl_gallery_gallery_search', {'var': entity.id}) }}">
            See gallery
        </a>
    </li>
    <li>
        <a href="{{ path('gallery_crud') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('gallery_crud_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('gallery_crud_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
