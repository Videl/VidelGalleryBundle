<h1>Gallery edit</h1>

<form action="{{ path('gallery_crud_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {# form_widget(edit_form) #}
    {{ form_row(edit_form.title) }}
    {{ form_row(edit_form.description) }}
    <ul>
    {% for field in edit_form.images %}
    <li>
        <label for="{{ field.vars.id }}"
            class="{{ field.vars.required ? 'required' : '' }}">
            <img src="{{field.vars.label }}" alt="image" />
        </label>
     {{ form_widget(field) }}
    </li>
    {% endfor %}
    </ul>
    {{ form_rest(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('videl_gallery_gallery_search', {'var': entity.id}) }}">
            See gallery
        </a>
    </li>
    <li>
        <a href="{{ path('gallery_crud') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('gallery_crud_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
